<div class="container">
    <div class="column title">
        <h1>Devour Burgers!</h1>
    </div>
    <div class="columns">

        <div class="column is-half burgerPic">
            <img src="/assets/img/burger.PNG" alt="a big burger!">
        </div>

        <div class="column is-half formContent">

            <div class="column is-full form-group">
                <form class="column create-form">
                    <input type="text" id="burger" name="name" placeholder="What kind of burger would you like?"><br><br>
                    <button class="submit">SUBMIT</button>
                </form>
            </div>

            <div class="columns">

                <div class="column is-half status">
                    <h2>Not Yet Devoured!</h2>
                    <hr>
                    <ul id="notDevoured">
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{>burgers/burger-block devoured=0}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="column is-half status">
                    <h2>Devoured!</h2>
                    <hr>
                    <ul id="wasDevoured">
                        {{#each burgers}}
                        {{#if devoured}}
                        {{>burgers/burger-block devoured=1}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
                
            </div>

        </div>
        
    </div>
</div>

<div class="column">
    <div class="footer">
        <h3>Check out my GitHub account <a href="https://github.com/prolsu" target="_blank">here.</a></h3>
    </div>
</div>